      "Recover": { "emailOnly": true }
    },
    "Errors": { "404": { "cta": "Go Home" }, "500": { "cta": "Retry" } }
  },
  "telemetry": {
    "eventNames": [
      "button_click",
      "dropdown_open",
      "modal_open",
      "form_submit",
      "validation_error",
      "tab_change",
      "accordion_toggle"
    ],
    "payloadShape": { "component": "string", "variant": "string", "durationMs": "number", "success": "boolean" }
  },
  "i18n": { "rtl": true, "dateLocale": "auto", "numberFormat": "compact" },
  "security": { "focusTrapEscapeOnly": true, "clipboardWriteConfirm": true },
  "migration": {
    "fromV1": [
      { "token": "color.primary", "to": "tokens.color.sys.primary" },
